<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/checkAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Check Amount: "
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/partySize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Party Size: "
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/checkAmount"
        app:layout_constraintTop_toBottomOf="@+id/checkAmount" />

    <EditText
        android:id="@+id/checkAmountValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:ems="8"
        android:inputType="numberDecimal"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@id/checkAmount"
        app:layout_constraintStart_toEndOf="@+id/checkAmount" />

    <EditText
        android:id="@+id/partySizeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:ems="8"
        android:inputType="numberDecimal"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@id/partySize"
        app:layout_constraintStart_toEndOf="@+id/partySize" />

    <Button
        android:id="@+id/computeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="51dp"
        android:text="Compute Tip"
        app:iconTint="#2196F3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/partySizeValue" />

    <TextView
        android:id="@+id/tip15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="160dp"
        android:text="Tip: 15%"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/partySize" />

    <TextView
        android:id="@+id/fifteenPercentTipValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/tip15"
        app:layout_constraintStart_toEndOf="@+id/tip15"
        tools:text="123" />

    <TextView
        android:id="@+id/total15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Total 15%:"
        app:layout_constraintEnd_toEndOf="@id/tip15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip15" />

    <TextView
        android:id="@+id/fifteenPercentTotalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/total15"
        app:layout_constraintStart_toEndOf="@+id/total15"
        tools:text="123" />

    <TextView
        android:id="@+id/tip20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="77dp"
        android:text="20%"
        app:layout_constraintBaseline_toBaselineOf="@id/tip15"
        app:layout_constraintStart_toEndOf="@+id/tip15" />

    <TextView
        android:id="@+id/twentyPercentTipValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tip20"
        app:layout_constraintStart_toEndOf="@+id/tip20"
        tools:text="456" />

    <TextView
        android:id="@+id/total20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:text="20%"
        app:layout_constraintBaseline_toBaselineOf="@id/total15"
        app:layout_constraintStart_toEndOf="@+id/total15" />

    <TextView
        android:id="@+id/twentyPercentTotalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/total20"
        app:layout_constraintStart_toEndOf="@+id/total20"
        tools:text="456" />

    <TextView
        android:id="@+id/tip25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="178dp"
        android:text="25%"
        app:layout_constraintBaseline_toBaselineOf="@id/tip15"
        app:layout_constraintStart_toEndOf="@+id/tip15" />

    <TextView
        android:id="@+id/twentyFivePercentTipValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/tip25"
        app:layout_constraintStart_toEndOf="@+id/tip25"
        tools:text="789" />

    <TextView
        android:id="@+id/total25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="173dp"
        android:text="25%"
        app:layout_constraintBaseline_toBaselineOf="@id/total15"
        app:layout_constraintStart_toEndOf="@+id/total15" />

    <TextView
        android:id="@+id/twentyFivePercentTotalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/total25"
        app:layout_constraintStart_toEndOf="@+id/total25"
        tools:text="789" />

</androidx.constraintlayout.widget.ConstraintLayout>